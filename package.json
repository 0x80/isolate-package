{
  "name": "isolate-package",
  "version": "1.4.1-4",
  "description": "Isolate a monorepo package with its shared dependencies to form a self-contained directory, compatible with Firebase deploy",
  "author": "Thijs Koerselman",
  "license": "MIT",
  "keywords": [
    "monorepo",
    "turborepo",
    "workspaces",
    "isolate",
    "package",
    "deploy",
    "firebase",
    "ci"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0x80/isolate-package.git"
  },
  "type": "module",
  "?//": "Use main/types to support older versions of Node for firebase-tools?",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "isolate": "dist/isolate-bin.mjs"
  },
  "scripts": {
    "build": "tsup-node && mv dist/isolate-bin.js dist/isolate-bin.mjs && mv dist/isolate-bin.js.map dist/isolate-bin.mjs.map",
    "build:watch": "tsup-node --watch",
    "test": "vitest",
    "format": "prettier --write .",
    "lint:format": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@pnpm/exec": "^2.0.0",
    "@pnpm/exportable-manifest": "^5.0.9",
    "@pnpm/lockfile-file": "^8.1.4",
    "@pnpm/prune-lockfile": "^5.0.7",
    "@pnpm/read-project-manifest": "^5.0.8",
    "@pnpm/types": "^9.4.0",
    "chalk": "^5.2.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.2.2",
    "outdent": "^0.8.0",
    "ramda": "^0.29.1",
    "rename-overwrite": "^4.0.4",
    "source-map-support": "^0.5.21",
    "tar-fs": "^2.1.1",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "@npmcli/arborist": "^7.2.1",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18.16.2",
    "@types/ramda": "^0.29.9",
    "@types/source-map-support": "^0.5.6",
    "@types/tar-fs": "^2.0.1",
    "eslint-config-0x80": "^0.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-jsdoc": "^1.1.1",
    "tsup": "^6.7.0",
    "type-fest": "^3.9.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  }
}
